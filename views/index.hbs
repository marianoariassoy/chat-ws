<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat App</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-200 flex justify-center items-center h-screen">

    <div
      class="bg-white rounded-2xl shadow-lg w-full max-w-md py-2"
      id="user-login"
    >
      <header class="px-8 py-6">
        <h2 class="font-bold text-3xl">Welcome!</h2>
        <h2 class="text-xl">Enter your username:</h2>
      </header>
      <main class="px-8 pb-3">
        <form id="username-form">
          <div class="flex gap-x-2">
            <input
              type="text"
              autocomplete="off"
              class="w-full h-11 border rounded-xl px-2"
              id="username"
              required
            />
            <button
              type="submit"
              class="py-2 px-4 bg-blue-500 text-white rounded-xl hover:bg-black hover:text-white"
            >Join</button>
          </div>
        </form>
      </main>
    </div>

    <div
      class="bg-white rounded-2xl shadow-lg w-full max-w-md"
      id="chat-main"
      style="display: none;"
    >
      <header class="px-8 py-6 shadow-lg w-full">
        <h1 class="text-3xl font-bold">Chat App</h1>
        <h2 class="text-sm">Active now</h2>
      </header>
      <main>
        <div
          class="h-96 flex flex-col gap-y-4 overflow-y-scroll bg-gray-100 text-sm p-4"
          id="chat-messages"
        >
        </div>

        <div class="p-8 py-6 pb-2">
          <form id="chat-form">
            <div class="flex gap-x-2">
              <input
                type="text"
                autocomplete="off"
                class="w-full h-11 border rounded-xl px-2"
                required
                id="message"
              />
              <button
                type="submit"
                class="py-2 px-4 bg-blue-500 text-white rounded-xl"
              >Send</button>
            </div>
          </form>
        </div>
      </main>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/scripts.js"></script>

  </body>

</html>